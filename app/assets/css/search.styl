@import websymbolsligaregular

body

  background-color: whitesmoke

#wrap

  .page-title
    font-size: 30px
    font-weight: 100
    margin-bottom: 0px
    float: left

  .page-header
    border-bottom: 1px dotted #60605b
    margin-left: 11px
    margin-bottom: 20px
    @media screen and (max-width: 767px)
      margin-bottom: 10px

  .switch
    margin-bottom: 6px

  .input-append
    display: block
    padding-right: 66px

  .credit
    text-align: right
    padding: 11px 6px 0 0
    margin-bottom: 0px

  a
    text-decoration: none

  form
    margin-bottom: 9px

  #item-container
    margin: 0 auto

  #loading
    text-align: center
    margin: 0 auto
    display: block
    padding: 25px

  #load-complete
    text-align: center
    font-size: 60px
    font-family: 'WebSymbolsLigaRegular'
    text-rendering: optimizeLegibility
    margin-top: 16px

  #social_box
    @media screen and (min-width: 768px)
      width: 71px
      bottom: 5px
      margin-left: 0px
      padding: 0px 4px 0px 4px
      border-radius: 7px
      list-style-type: none
      text-align: center
      li
        padding-bottom: 5px

    @media screen and (max-width: 767px)
      list-style-type: none
      margin: 10px 0px 30px 5px
      li
        display: inline-block
        height: 20px

      #facebook
        width: 110px
      #twitter
        width: 100px
      #google
        width: 70px
      #hatena
        width: 60px

  li#toTop
    padding : 8px 0px 5px 0px
    @media screen and (max-width: 767px)
      display: none

  .fixed
    position: fixed
